<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">


    <TextView
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="45dp"
        android:gravity="center_vertical"
        android:text="@string/dashboard"
        android:textAppearance="@style/dashboard" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/fitur1"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/coin" />

            <TextView
                android:id="@+id/tvPoint"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="65dp"
                android:layout_marginStart="10dp"
                android:text="@string/totalpoints" />

            <TextView
                android:id="@+id/totalpoint"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="90dp"
                android:layout_marginStart="10dp"
                android:text="@string/points" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fitur2"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="17dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/recyclebin" />

            <TextView
                android:id="@+id/sampahterjual"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="67dp"
                android:layout_marginStart="10dp"
                android:text="@string/sampah_terjual" />

            <TextView
                android:id="@+id/kg"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="90dp"
                android:layout_marginStart="10dp"
                android:text="@string/kg" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!--    Bagian Berita atau Informasi-->

    <TextView
        android:id="@+id/ayojagalingkungan"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="265dp"
        android:text="@string/ayo_jaga_lingkungan"
        android:textAppearance="@style/ayo_jaga_li" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/berita1"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/news1" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/berita2"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/thumb" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/tvBerita1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="470dp"
        android:text="@string/string_judul1" />

    <TextView
        android:id="@+id/tvBerita2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="470dp"
        android:text="@string/string_judul2" />

</RelativeLayout>